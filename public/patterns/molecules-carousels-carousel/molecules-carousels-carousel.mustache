<div id="carouselExampleControls" style="max-width: {{sampleCarouselMaxWidth}}; width: 100%; background-color: grey;" class="carousel slide" data-interval="false">
  <div class="carousel-inner">
    {{#carouselItemList}}
      <div class="carousel-item {{#isCarouselActive}}active{{/isCarouselActive}}">
        <img class="img-fluid" src="{{carouselItemImg}}" alt="{{carouselAltText}}">
      </div>
    {{/carouselItemList}}
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>